@using Core.Entities
@using Web.Areas.Admin.ViewModels.Product
@model ProductIndexVM


<a class="btn btn-primary" asp-action="create" asp-controller="product">Create</a>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Specificity</th>
            <th scope="col">Name</th>
            <th scope="col">Cost</th>
            <th scope="col">Old Cost</th>
            <th scope="col">Product Status</th>
            <th scope="col">Description</th>
            <th scope="col">Color</th>
            <th scope="col">Main photo</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Specificity</td>
                <td>@product.Name</td>
                <td>@product.Cost</td>
                <td>@product.OldCost</td>
                <td>@product.ProductStatus</td>
                <td>@Html.Raw(@product.Description)</td>
                <td>@product.Color</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/images/@product.MainPhotoName"></td>
                <td>@product.CreatedAt.ToShortDateString()</td>
                <td>@product.ModifiedAt.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="product" asp-route-id="@product.Id">Update</a>
                    <a class="btn btn-light m-2" asp-action="addtags" asp-controller="product" asp-route-id="@product.Id">Add tags</a>
                    <form method="post" asp-action="delete" asp-controller="product" asp-route-id="@product.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
