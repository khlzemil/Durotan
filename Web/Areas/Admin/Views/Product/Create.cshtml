@using Core.Constants
@using Web.Areas.Admin.ViewModels.Product
@model ProductCreateVM

<form enctype="multipart/form-data" asp-action="create" asp-controller="product" method="post">
    <div class="form-group">
        <label asp-for="Specificity"></label>
        <input asp-for="Specificity" />
        <span asp-validation-for="Specificity"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" />
        <span asp-validation-for="Cost"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldCost"></label>
        <input asp-for="OldCost" />
        <span asp-validation-for="OldCost"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductStatus">Product status</label>
        <select class="form-control" asp-for="ProductStatus" asp-items="Html.GetEnumSelectList<ProductStatus>()"></select>
        <span asp-validation-for="ProductStatus"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" />
        <span asp-validation-for="Color"></span>
    </div>
    <div class="form-group">
        <label asp-for="MainPhoto"></label>
        <input asp-for="MainPhoto" />
        <span asp-validation-for="MainPhoto"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductPhotos">Photos</label>
        <input class="form-control" asp-for="ProductPhotos">
        @{
            if (Html.ViewData.ModelState["ProductPhotos"] != null)
            {
                foreach (var error in Html.ViewData.ModelState["ProductPhotos"].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }

        }
    </div>
    <button type="submit">Create</button>
</form>
@section Scripts{


    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
