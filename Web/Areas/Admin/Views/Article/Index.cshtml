@using Web.Areas.Admin.ViewModels.Article
@model ArticleIndexVM


<a class="btn btn-primary" asp-action="create" asp-controller="article">Create</a>
    
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Article name</th>
            <th scope="col">Article date</th>
            <th scope="col">Author</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Id</td>
                <td>@article.Title</td>
                <td>@article.ArticleName</td>
                <td>@article.ArticleDate.ToShortDateString()</td>
                <td>@article.Author</td>
                <td>@article.CreatedAt.ToShortDateString()</td>
                <td>@article.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/images/@article.PhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="article" asp-route-id="@article.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="article" asp-route-id="@article.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>




