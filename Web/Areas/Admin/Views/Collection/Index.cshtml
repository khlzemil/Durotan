@using Web.Areas.Admin.ViewModels.Collection
@model CollectionIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="collection">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Text</th>
            <th scope="col">Button</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model.Collections)
        {
            <tr>
                <td>@collection.Id</td>
                <td>@collection.Title</td>
                 <td>@Html.Raw(collection.Description)</td>
                  <td>@collection.Text</td>
                  <td>@collection.ExploreButton</td>
                   <td>@collection.CreatedAt.ToShortDateString()</td>
                   <td>@collection.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/images/@collection.CollectionPhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="collection" asp-route-id="@collection.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="collection" asp-route-id="@collection.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

