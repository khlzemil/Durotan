@using Core.Constants
@using Web.Areas.Admin.ViewModels.Company
@model CompanyCreateVM

<form enctype="multipart/form-data" asp-action="create" asp-controller="company" method="post">

    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <input class="form-control" asp-for="Text">
        <span asp-validation-for="Text"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyPhoto">Company Photo</label>
        <input class="form-control" asp-for="CompanyPhoto">
        <span asp-validation-for="CompanyPhoto"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
   <a class="btn btn-danger" asp-action="index" asp-controller="company">Cancel</a>
</form>


@section Scripts{


    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}

