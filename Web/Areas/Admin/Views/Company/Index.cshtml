@using Web.Areas.Admin.ViewModels.Company
@model CompanyIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="company">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Text</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.Companies)
        {
            <tr>
                <td>@company.Id</td>
                <td>@company.Title</td>
                 <td>@Html.Raw(company.Description)</td>
                  <td>@company.Text</td>
                   <td>@company.CreatedAt.ToShortDateString()</td>
                   <td>@company.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src= "./images/@company.PhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="company" asp-route-id="@company.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="company" asp-route-id="@company.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

