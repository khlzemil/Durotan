@using Web.Areas.Admin.ViewModels.Feature
@model FeatureIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="feature">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
              <th scope="col">Photo</th>
              <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var feature in Model.Features)
        {
            <tr>
                <td>@feature.Id</td>
                <td>@feature.Title</td>
                 <td>@Html.Raw(feature.Description)</td>
                   <td>@feature.CreatedAt.ToShortDateString()</td>
                   <td>@feature.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/images/@feature.PhotoName" /></td>
               
                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="feature" asp-route-id="@feature.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="feature" asp-route-id="@feature.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>


